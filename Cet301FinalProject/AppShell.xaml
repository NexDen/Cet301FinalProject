<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Cet301FinalProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Cet301FinalProject"
    xmlns:pages="clr-namespace:Cet301FinalProject.Pages"
    Title="Cet301FinalProject">

    <TabBar>
        <ShellContent
            Title="Main Page"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"
        ></ShellContent>
        <ShellContent
            Title="Customers"
            ContentTemplate="{DataTemplate pages:LoginPage}"
            Route="CustomersPage"
        ></ShellContent>
        <ShellContent
            Title="Products"
            ContentTemplate="{DataTemplate pages:MainLandingPage}"
            Route="ProductsPage"
        ></ShellContent>
    </TabBar>

</Shell>
