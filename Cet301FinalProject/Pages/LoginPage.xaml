<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Cet301FinalProject.Pages.LoginPage"
    BackgroundColor= "{AppThemeBinding Light=White, Dark=#1f1e33}"
    >
    <ContentPage.Content>
        <VerticalStackLayout Padding="30" Spacing="15"
        VerticalOptions="Center">
            <Label Text="CeTransport"
            FontSize="75"
            HorizontalOptions="Center" />

            <Entry x:Name="UsernameEntry"
                Placeholder="Username" />

            <Entry x:Name="PasswordEntry"
            Placeholder="Password"
            IsPassword="True" />
            
            <HorizontalStackLayout>
                <CheckBox x:Name="RememberCheckbox" VerticalOptions="Center"></CheckBox>
                <Label Text="Remember Me" VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <Button Text="Login"
            Clicked="LoginButton_Clicked" />

        </VerticalStackLayout> 
    </ContentPage.Content>
</ContentPage>