<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Cet301FinalProject.Pages.SettingsPage"
    Title="Settings">

    <VerticalStackLayout
        Padding="24"
        Spacing="20">

        <Frame
            Padding="16"
            CornerRadius="14"
            HasShadow="True"
            BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}">

            <HorizontalStackLayout Spacing="12">
                <Label
                    Text="Dark Mode"
                    VerticalOptions="Center"
                    FontSize="16" />

                <Switch
                    x:Name="ThemeSwitch"
                    HorizontalOptions="EndAndExpand"
                    Toggled="ThemeSwitch_Toggled" />
            </HorizontalStackLayout>
        </Frame>
        
        <Frame
            Padding="16"
            CornerRadius="14"
            HasShadow="True"
            BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}">

            <VerticalStackLayout Spacing="12">

                <Button
                    Text="Reload Vehicles and Drivers"
                    Clicked="ReloadData_Clicked" />

            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>
</ContentPage>