<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime"
    x:Class="Cet301FinalProject.Pages.CreateJobPage"
    BackgroundColor= "{AppThemeBinding Light=White, Dark=#1f1e33}"
    Title="Create Job">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Label Text="Vehicle" />
            <Picker
                x:Name="VehiclePicker"
                Title="Select Vehicle"
                ItemDisplayBinding="{Binding PlateNo}" />

            <Label Text="Driver" />
            <Picker
                x:Name="DriverPicker"
                Title="Select Driver"
                ItemDisplayBinding="{Binding Name}" />

            <Label Text="Commodity Type" />
            <Entry x:Name="CommodityEntry" />

            <Label Text="Tonnage" />
            <Entry
                x:Name="TonnageEntry"
                Keyboard="Numeric" />

            <Label Text="Sale Cost" />
            <Entry
                x:Name="SaleCostEntry"
                Keyboard="Numeric" />
            
            <Label Text="Loading Address" />
            <Entry
                x:Name="LoadingAddressEntry" />
            
            <Label Text="Unloading Address" />
            <Entry
                x:Name="UnloadingAddressEntry"/>

            <Label Text="Order Date" />
            <DatePicker x:Name="OrderDatePicker" />

            <Label Text="Delivery Date" />
            <DatePicker x:Name="DeliveryDatePicker" />

            <HorizontalStackLayout Spacing="15">
                <Label Text="Active" VerticalOptions="Center" />
                <Switch x:Name="IsActiveSwitch" />
            </HorizontalStackLayout>

            <Button
                Text="Create Job"
                Clicked="CreateButton_Clicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>