<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Cet301FinalProject.Pages.MainLandingPage"
    BackgroundColor= "{AppThemeBinding Light=White, Dark=#1f1e33}"
    Title="Main Menu">

    <Grid RowDefinitions="Auto,*"
          Padding="24">

        <VerticalStackLayout
            Grid.Row="0"
            Spacing="6">

            <Label
                Text="CeTransport"
                FontSize="72"
                FontAttributes="Bold"
                TextColor="{AppThemeBinding Light=#222222, Dark=#dddddd}"
                HorizontalOptions="Center" />

            <Label
                Text="Management Panel"
                FontSize="18"
                TextColor="{AppThemeBinding Light=#333333, Dark=#cccccc}"

                HorizontalOptions="Center" />

            <Label
                x:Name="AdminNameLabel"
                FontSize="14"
                TextColor="#696969"
                HorizontalOptions="Center"
                Margin="0,12,0,0" />
        </VerticalStackLayout>

        <VerticalStackLayout
            Grid.Row="1"
            Spacing="16"
            VerticalOptions="Center">

            <Frame
                CornerRadius="16"
                Padding="16"
                HasShadow="True"
                BackgroundColor="#787878">

                <VerticalStackLayout Spacing="12">

                    <Button
                        Text="Job Analytics"
                        HeightRequest="50"
                        BackgroundColor="#125343"
                        TextColor="White"
                        CornerRadius="12"
                        Clicked="AnalyticsButton_Clicked" />
                    
                    <Button
                        Text="View My Jobs"
                        HeightRequest="50"
                        BackgroundColor="#2563EB"
                        TextColor="White"
                        CornerRadius="12"
                        Clicked="JobsButton_Clicked" />

                    <Button
                        Text="Create New Job"
                        HeightRequest="50"
                        BackgroundColor="#10B981"
                        TextColor="White"
                        CornerRadius="12"
                        Clicked="CreateJobButton_Clicked" />

                    <Button
                        Text="Settings"
                        HeightRequest="50"
                        BackgroundColor="#E5E7EB"
                        TextColor="#111827"
                        CornerRadius="12"
                        Clicked="SettingsButton_Clicked" />

                </VerticalStackLayout>
            </Frame>

            <Button
                Text="Logout"
                HeightRequest="48"
                BackgroundColor="Transparent"
                TextColor="#DC2626"
                BorderColor="#DC2626"
                BorderWidth="1"
                CornerRadius="12"
                Clicked="LogoutButton_Clicked" />

        </VerticalStackLayout>

    </Grid>
</ContentPage>
