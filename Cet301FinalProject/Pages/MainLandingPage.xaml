<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Cet301FinalProject.Pages.MainLandingPage"
    Title="Main Menu">

    <VerticalStackLayout
        Padding="30"
        Spacing="20"
        VerticalOptions="Center">

        <Label
            x:Name="AdminNameLabel"
            FontSize="18"
            HorizontalOptions="Center" />

        <Button
            Text="View My Jobs"
            Clicked="JobsButton_Clicked" />

        <Button
            Text="Create New Job"
            Clicked="CreateJobButton_Clicked" />

        <Button
            Text="Settings"
            Clicked="SettingsButton_Clicked" />

        <Button
            Text="Logout"
            TextColor="Red"
            Clicked="LogoutButton_Clicked" />

    </VerticalStackLayout>
</ContentPage>